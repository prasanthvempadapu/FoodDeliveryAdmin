@{
}


<form method="post">
    <div class="border p-3 mt-4 container  align-self-center " style="width:40%">

        <div class="p-3 mt-4 container align-self-center">
            @if(ViewBag.UserName == "UserName already Exist")
            {
                <p class="text-danger">UserName already exist</p>
            }
              @if(ViewBag.RestaurantName == "Restaurant Name already Exist")
            {
                <p class="text-danger">Restaurant Name already exist</p>
            }
            @if(ViewBag.UserName == "NotExist")
            {
                <p class="text-danger">User does not exist! Create Account</p>
            }

            <h3>Sign up</h3>
            <br />
            <div class="mb-3">
                @*<label asp-for="UserName"></label>*@
                <input asp-for="RestaurantName" placeholder="Restaurant Name" class="form-control" style="width:100%"/>
            </div>

             <div class="mb-3">
                @*<label asp-for="Email"></label>*@
                <input asp-for="UserName" placeholder="UserName" class="form-control" style="width:100%"/>
            </div>

             <div class="mb-3">
                @*<label asp-for="Password"></label>*@
                <input asp-for="RestaurantImage" placeholder="Restaurant Image" class="form-control" style="width:100%"/>
            </div>

             <div class="mb-3">
                @*<label asp-for="Password"></label>*@
                <input asp-for="Password" placeholder="Password" class="form-control" style="width:100%"/>
            </div>

            <button type="submit" class="btn btn-outline-primary" style="width:100% ">Create</button>


     </div>

      
        
    </div>

</form>
